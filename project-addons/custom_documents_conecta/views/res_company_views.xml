<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_company_form_documents" model="ir.ui.view">
            <field name="name">res.company.form</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                
                <notebook position="inside">
                    <page string="Reports">
                        <group>
                            <group>
                                <field name="logo_footer_left" widget="image"/>                               
                                <field name="logo_footer_rigth" widget="image"/>                               
                            </group>
                            <group> 
                                <field name="sale_note"/>
                                <field name="invoice_text"/>
                            </group>
                            <group>
                                <field name="lopd_text"/>
                                <field name="logo_lopd" widget ="image"/>
                            </group>
                        </group>
                    </page>
                </notebook>

            </field>
        </record>
      
    </data>
</odoo>
